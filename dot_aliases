alias vi='nvim'
alias vim='nvim'
alias d='docker'
alias g='git'
alias k='kubectl'

alias mv='mv -v'
alias rm='rm -iv'

alias df='df -h'
alias free='free -m'
alias setclip='xclip -selection c'
alias getclip='xclip -selection c -o'

# sourcing the script so it can be used to `cd` in directories
alias clone='. "$HOME/bin/clone"'

[ "$TERM" = "xterm-kitty" ] && alias ssh="kitty +kitten ssh"

alias gcai='git --no-pager diff | mods 'write a commit message for this patch. also write the long commit message. use semantic commits. break the lines at 80 chars' >.git/gcai; git commit -a -F .git/gcai -e";'
